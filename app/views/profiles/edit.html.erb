<h1>Editing Profile whith id: <%= @profile.id %></h1>


<div>
<%= form_for :profile, url: profile_path(@profile), method: :put do |f| %>
	<% if @profile && @profile.errors.any? %>
	<p>
		<ul>
		<% @profile.errors.full_messages.each do |msg| %>
			<div class="alert alert-danger">
				<li><%= msg %></li>
			</div>
		<% end %>
		</ul>
	</p>
	<% end %>
	<p>
		First name <br />
		<%= f.text_area :first_name, style: "width: 300px;height: 70px"%>
	</p>
	<p>
		Last name <br />
		<%= f.text_area :last_name, style: "width: 300px;height: 70px"%>
	</p>
	<p>
		Email <br />
		<%= f.text_area :email, style: "width: 300px;height: 70px"%>
	</p>
	<p>
		Gender <br />
		<%= f.text_area :gender, style: "width: 300px;height: 70px"%>
	</p>
	<p>
		<%= render 'form' %>
	</p>
<% end %> 
</div>

<%= link_to 'Show', @profile %> |
<%= link_to 'Back', profiles_path %>




