<% if user_signed_in? %>
        <% if current_user.admin?%>
          <% @cl = ""%>
          <h1>Listing Profiles</h1>

              <table class="<%=@cl%>">
                <thead>
                  <tr>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @profiles.each do |profile| %>
                    <tr>
                      <td><%= profile.first_name%> | </td> 
                      <td><%= profile.last_name%> | </td> 
                      <td><%= profile.email%> | </td> 
                      <td><%= profile.gender%> | </td> 
                      <td><%= profile.locale%> | </td> 
                      <td><%= link_to 'Show', profile%> | </td>
                      <td><%= link_to 'Edit', edit_profile_path(profile), class: @cl  %> | </td>
                      <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: @cl  %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

              <br>

            <%= link_to 'New Profile', new_profile_path, class: @cl %>

        <%else%>
          <%@cl = "hidden"%>
        <% end %>
      <% else %>
         <% @cl = "hidden" %>

<%end%>




