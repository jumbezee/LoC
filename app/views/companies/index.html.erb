 <% if user_signed_in? %>
        <% if current_user.admin?%>
          <% @cl = ""%>
        <%else%>
          <%@cl = "hidden"%>
        <% end %>
      <% else %>
         <% @cl = "hidden" %>
<%end%>

<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name%></td>
        <td><%= company.city%></td> 
        <td><%= company.country%></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company), class: @cl %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: @cl %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path, class: @cl %>
